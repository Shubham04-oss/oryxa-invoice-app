{
  "name": "oryxa-monorepo",
  "version": "1.0.0",
  "description": "Oryxa - Invoice + Automation SaaS Prototype",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:worker\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:worker": "node worker/index.js",
    "build": "npm run build:api",
    "build:api": "cd apps/api && npm run build",
    "start": "concurrently \"npm:start:api\" \"npm:start:worker\"",
    "start:api": "cd apps/api && npm start",
    "start:worker": "node worker/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/seed.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "brand:render": "node apps/api/scripts/render-brand-logo.js",
    "deploy:landing": "cd apps/landing && ./deploy.sh",
    "deploy:vercel": "cd apps/api && vercel --prod",
    "prepare": "husky install"
  },
  "workspaces": [
    "apps/*",
    "modules/*",
    "worker"
  ],
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "dotenv": "^16.4.5",
    "mysql2": "^3.15.1",
    "psql": "^0.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "invoice",
    "automation",
    "saas",
    "monorepo",
    "nextjs",
    "prisma"
  ],
  "author": "Oryxa Team",
  "license": "MIT"
}
